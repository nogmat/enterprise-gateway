{
    "argv": [
      "python",
      "-m",
      "ipykernel_launcher",
      "-f",
      "{connection_file}"
    ],
    "display_name": "Pyspark",
    "language": "python",
    "env": {
      "PYSPARK_DRIVER_PYTHON": "/opt/conda/bin/python3",
      "PYSPARK_PYTHON": "/usr/local/bin/python3",
      "SPARK_HOME": "/opt/spark/",
      "SPARK_OPTS": "--master yarn --deploy-mode client",
      "PYTHONPATH": "/opt/spark/python/lib/py4j-0.10.7-src.zip:/opt/spark/python/",
      "HADOOP_HOME": "/usr/hdp/current",
      "HADOOP_CONF_DIR": "/usr/hdp/current/etc/hadoop"
    }
}